{
  "version": 2,
  "name": "fraudguard-ai-pro",
  "public": true,
  "buildCommand": "cd fraudguard-pro-app && npm install && npm run build",
  "outputDirectory": "fraudguard-pro-app/dist",
  "env": {
    "VITE_API_URL": "@fraudguard_api_url",
    "VITE_APP_NAME": "FraudGuard AI Pro",
    "VITE_APP_VERSION": "1.0.0"
  },
  "envPrefix": "VITE_",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://fraudguard-api.vercel.app/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=()"
        }
      ]
    }
  ],
  "regions": ["sfo1"],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60,
      "memory": 512
    }
  }
}
