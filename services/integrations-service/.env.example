# Integrations Service Configuration

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here

# Service Configuration
SERVICE_NAME=integrations-service
SERVICE_PORT=5008
SERVICE_HOST=0.0.0.0

# SIEM Integration
SIEM_ENABLED=true
SIEM_ENDPOINT=https://siem.example.com
SIEM_API_KEY=your-siem-api-key

# KYC Integration
KYC_ENABLED=true
KYC_ENDPOINT=https://kyc.example.com
KYC_API_KEY=your-kyc-api-key

# Slack Integration
SLACK_ENABLED=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Teams Integration
TEAMS_ENABLED=true
TEAMS_WEBHOOK_URL=https://outlook.webhook.office.com/webhookb2/YOUR/WEBHOOK/URL

# Email Integration
EMAIL_ENABLED=true
EMAIL_SMTP_SERVER=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@example.com
EMAIL_PASSWORD=your-email-password

# Integration Timeouts
INTEGRATION_TIMEOUT=30
INTEGRATION_RETRY_COUNT=3
INTEGRATION_RETRY_DELAY=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/integrations-service.log

# CORS Configuration
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
