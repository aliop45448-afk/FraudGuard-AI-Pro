# API Service Configuration

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here

# Service Configuration
SERVICE_NAME=api-service
SERVICE_PORT=5004
SERVICE_HOST=0.0.0.0

# Webhook Configuration
WEBHOOK_TIMEOUT=10
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=300

# Banking Integration
BANKING_API_TIMEOUT=30
BANKING_SYNC_FREQUENCY=hourly

# Data Export
EXPORT_MAX_RECORDS=100000
EXPORT_FORMATS=json,csv,xml,html,pdf

# Batch Processing
BATCH_MAX_SIZE=1000
BATCH_TIMEOUT=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/api-service.log

# Database Configuration (if needed)
# DATABASE_URL=postgresql://user:password@localhost/fraudguard_api

# CORS Configuration
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
