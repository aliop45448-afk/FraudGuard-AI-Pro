# AI Assistant Service Configuration

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here

# Service Configuration
SERVICE_NAME=ai-assistant-service
SERVICE_PORT=5007
SERVICE_HOST=0.0.0.0

# AI Assistant Configuration
ASSISTANT_ENABLED=true
CONVERSATION_HISTORY_ENABLED=true
PATTERN_DETECTION_ENABLED=true
FRAUD_SIMULATION_ENABLED=true

# AI Model Configuration
AI_MODEL_TYPE=ensemble
AI_CONFIDENCE_THRESHOLD=0.85
AI_RESPONSE_TIMEOUT=30

# Pattern Detection
PATTERN_DETECTION_SENSITIVITY=high
PATTERN_RETENTION_DAYS=90
PATTERN_AUTO_CLEANUP_ENABLED=true

# Fraud Simulation
SIMULATION_MAX_TRANSACTIONS=100000
SIMULATION_TIMEOUT=300
SIMULATION_RESULTS_RETENTION_DAYS=365

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/ai-assistant-service.log

# CORS Configuration
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
