# Security & Compliance Service Configuration

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here

# Service Configuration
SERVICE_NAME=security-service
SERVICE_PORT=5005
SERVICE_HOST=0.0.0.0

# Encryption Configuration
ENCRYPTION_ALGORITHM=AES-256-Fernet
KEY_ROTATION_INTERVAL=90
KEY_ROTATION_ENABLED=true

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_ENABLED=true
AUDIT_LOG_FILE=logs/audit.log

# GDPR Configuration
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
RIGHT_TO_DELETION_ENABLED=true
DATA_PORTABILITY_ENABLED=true

# PCI DSS Configuration
PCI_DSS_ENABLED=true
CARD_VALIDATION_ENABLED=true
CARD_MASKING_ENABLED=true
SECURITY_HEADERS_ENABLED=true

# Compliance Features
COMPLIANCE_MODE=strict
COMPLIANCE_AUDIT_ENABLED=true
COMPLIANCE_REPORTING_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/security-service.log

# CORS Configuration
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
