# Reports & Analytics Service Configuration

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here

# Service Configuration
SERVICE_NAME=reports-service
SERVICE_PORT=5006
SERVICE_HOST=0.0.0.0

# Report Configuration
REPORT_GENERATION_ENABLED=true
REPORT_FORMATS=json,pdf,html,excel
REPORT_RETENTION_DAYS=365
REPORT_ARCHIVE_ENABLED=true

# Analytics Configuration
ANALYTICS_ENABLED=true
PREDICTIVE_ANALYTICS_ENABLED=true
TREND_ANALYSIS_ENABLED=true
ANOMALY_DETECTION_ENABLED=true

# Case Management
CASE_MANAGEMENT_ENABLED=true
CASE_AUTO_ASSIGNMENT_ENABLED=true
CASE_ESCALATION_ENABLED=true
CASE_SLA_ENABLED=true

# Scheduling
REPORT_SCHEDULE_DAILY=true
REPORT_SCHEDULE_WEEKLY=true
REPORT_SCHEDULE_MONTHLY=true
REPORT_GENERATION_TIME=02:00

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/reports-service.log

# CORS Configuration
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
